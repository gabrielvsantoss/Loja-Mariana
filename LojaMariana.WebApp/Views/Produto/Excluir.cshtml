@model LojaMariana.WebApp.Models.ExcluirProdutoViewModel
@{
    ViewBag.Titulo = "Excluir Produto - Finesie Boutique";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(160deg, #ffe4e1, #fff0f5);
        }

        .navbar-custom {
            background-color: #ffb6c1;
            padding: 1rem 2rem;
        }

            .navbar-custom .navbar-brand, .navbar-custom .btn-custom {
                color: #800040 !important;
            }

        .btn-custom {
            background-color: #ffc0cb;
            color: #800040;
            border-radius: 12px;
            font-weight: 600;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #ff99aa;
            }

        .container-content {
            margin-top: 120px;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fs-4 fw-bold" href="#">Finesie</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto gap-2">
                    <li class="nav-item"><a class="btn btn-custom" asp-controller="Cliente" asp-action="Index">Clientes</a></li>
                    <li class="nav-item"><a class="btn btn-custom" asp-controller="Produto" asp-action="Index">Produtos</a></li>
                    <li class="nav-item"><a class="btn btn-custom" asp-controller="Venda" asp-action="Index">Vendas</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container container-content">
        <h2 class="mb-4"><i class="bi bi-box-seam"></i> Excluir Produto</h2>
        <p>Tem certeza que deseja excluir o produto <strong>@Model.Nome</strong>?</p>

        <form asp-action="Excluir" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-custom">Excluir</button>
            <a asp-action="Index" class="btn btn-custom ms-2">Cancelar</a>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
