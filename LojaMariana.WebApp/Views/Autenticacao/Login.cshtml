@model LojaMariana.WebApp.Models.LoginViewModel
@{
    ViewBag.Titulo = "Login - Finesie Boutique";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(160deg, #ffe4e1, #fff0f5);
        }

        .navbar-custom {
            background-color: #ffb6c1;
            padding: 1rem 2rem;
        }

            .navbar-custom .navbar-brand {
                font-size: 2rem;
                color: #800040 !important;
            }

            .navbar-custom .nav-link,
            .navbar-custom .btn-custom {
                color: #800040 !important;
                font-size: 1.1rem;
                font-weight: 600;
                padding: 0.75rem 1.5rem;
            }

        .btn-custom {
            background-color: #ffc0cb;
            color: #800040;
            font-weight: 600;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #ff99aa;
                transform: scale(1.05);
            }

        .form-container {
            max-width: 400px;
            margin: 120px auto 50px auto;
            background-color: #fff0f5;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(255, 192, 203, 0.5);
        }

            .form-container h2 {
                color: #800040;
                font-weight: 700;
                margin-bottom: 25px;
                text-align: center;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fs-4 fw-bold" href="/">Finesie</a>
        </div>
    </nav>

    <div class="container form-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Senha" class="form-label"></label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-custom w-100">Entrar</button>
            <div class="mt-3 text-center">
                <a asp-action="Registro" class="text-decoration-none" style="color:#800040;">Criar conta</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
