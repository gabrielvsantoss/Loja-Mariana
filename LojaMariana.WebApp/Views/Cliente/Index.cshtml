@model LojaMariana.WebApp.Models.ClienteIndexViewModel
@{
    ViewBag.Titulo = "Clientes - Finesie Boutique";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(160deg, #ffe4e1, #fff0f5);
        }

        /* Navbar */
        .navbar-custom {
            background-color: #ffb6c1;
            padding: 1rem 2rem;
        }

            .navbar-custom .navbar-brand {
                font-size: 2rem;
                color: #800040 !important;
            }

            .navbar-custom .nav-link,
            .navbar-custom .btn-custom {
                color: #800040 !important;
                font-size: 1.1rem;
                font-weight: 600;
                padding: 0.75rem 1.5rem;
            }

                .navbar-custom .nav-link:hover,
                .navbar-custom .btn-custom:hover {
                    color: #d63384 !important;
                }

        .btn-custom {
            background-color: #ffc0cb;
            color: #800040;
            font-weight: 600;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #ff99aa;
                transform: scale(1.05);
            }

        /* Container */
        .container-content {
            margin-top: 120px;
            margin-bottom: 50px;
        }

        .clientes-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        /* Card de cliente */
        .cliente-card {
            background-color: #ffc0cb;
            border-radius: 20px;
            padding: 20px;
            position: relative;
            box-shadow: 0 5px 15px rgba(255, 192, 203, 0.5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 20px;
        }

            .cliente-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 25px rgba(255, 192, 203, 0.7);
            }

            .cliente-card .cliente-icon {
                position: absolute;
                top: 15px;
                left: 15px;
                font-size: 2rem;
                color: #800040;
            }

            .cliente-card h5 {
                margin-left: 40px;
                color: #800040;
                font-weight: 700;
                margin-bottom: 15px;
            }

            .cliente-card p {
                color: #800040;
                font-size: 0.95rem;
                margin-bottom: 5px;
            }

            .cliente-card .btn-group {
                margin-top: 15px;
            }

                .cliente-card .btn-group .btn {
                    font-size: 0.9rem;
                    padding: 0.4rem 0.8rem;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fs-4 fw-bold" href="/">Finesie</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto gap-2">
                    <li class="nav-item">
                        <a class="btn btn-custom" asp-controller="Cliente" asp-action="Index">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-custom" asp-controller="Produto" asp-action="Index">Produtos</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-custom" asp-controller="Venda" asp-action="Index">Vendas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container container-content">
        <div class="clientes-header">
            <h2>Clientes</h2>
            <a href="@Url.Action("Cadastrar","Cliente")" class="btn btn-custom">Cadastrar Cliente</a>
        </div>

        <div class="row">
            @foreach (var cliente in Model.Clientes)
            {
                <div class="col-md-4">
                    <div class="cliente-card">
                        <i class="bi bi-person-circle cliente-icon"></i>
                        <h5>@cliente.Nome</h5>
                        <p><strong>Telefone:</strong> @cliente.Telefone</p>
                        <p><strong>Email:</strong> @cliente.Email</p>
                        <p><strong>Endereço:</strong> @cliente.Endereco</p>
                        <div class="btn-group d-flex justify-content-between mt-2">
                            <a asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-sm btn-custom">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Historico" asp-route-id="@cliente.Id" class="btn btn-sm btn-custom">
                                <i class="bi bi-clock-history"></i> Histórico
                            </a>
                            <a asp-action="Excluir" asp-route-id="@cliente.Id" class="btn btn-sm btn-custom">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</body>
</html>
